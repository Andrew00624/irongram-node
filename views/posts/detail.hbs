<section class="post-detail">  
  <article>
    <div class="card">
        <p>
          <a href="/users/{{post.user.username}}">
            {{post.user.username}}
          </a>
        </p>        
        <img src="{{post.imageURL}}" alt="">
        <p>{{post.text}}</p>        
      </div>
      {{#if owner}}
      <form action="/posts/detail/{{post._id}}" method="post" enctype="multipart/form-data">
        <textarea name="text" id="" rows="5" placeholder="que hay de nuevo??"></textarea>
        <input type="file" name="image" id="">
        <input type="submit" value="postea ðŸ˜œ">
      </form>    
      <a href="/posts/delete/{{post._id}}">
        <button>Delete</button>
      </a>        
            
          
      {{/if}}
  </article>
  <article>
    <h2>Comments</h2>
    <form action="/posts/detail/{{post._id}}/comments" method="post">
      <textarea name="text" id="" rows="5" placeholder="coomenta este post"></textarea>
      <input type="submit" value="comenta">
    </form>
    <div>
      {{#each comments}}
      <div class="card">
        <p>
          <a href="/users/{{this.user.username}}">
            {{this.user.username}}
          </a>
        </p>
        <p>{{this.text}}</p>
      </div>
        
      {{/each}}
    </div>
  </article>
</section>